/usr/bin/podman pull docker.io/deluan/navidrome:latest
/usr/bin/podman run \
--name navidrome \
--network=navidrome_container_net \
{% raw %}--user $(id -u):$(id -g) \
{% endraw %}--volume {{ navidrome_path }}/music:/music:ro \
--volume {{ navidrome_path }}/data:/data \
-e ND_LOGLEVEL=info \
-e TZ=America/New_York \
-e ND_BACKUP_PATH={{ navidrome_path }}/backup \
-d docker.io/deluan/navidrome:latest
