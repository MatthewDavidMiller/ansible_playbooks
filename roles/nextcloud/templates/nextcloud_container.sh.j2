/usr/bin/podman run \
--name=nextcloud \
--network=nextcloud_container_net \
--volume {{ nextcloud_path }}/base:/var/www/html/:Z \
--volume {{ nextcloud_path }}/data:/var/www/html/data/:Z \
--volume {{ nextcloud_path }}/config:/var/www/html/config/:Z \
--volume {{ nextcloud_path }}/apps:/var/www/html/custom_apps/:Z \
-e POSTGRES_DB={{ nextcloud_database_name }} \
-e POSTGRES_USER={{ nextcloud_database_user }} \
-e POSTGRES_PASSWORD='{{ nextcloud_database_user_password }}' \
-e NEXTCLOUD_ADMIN_USER={{ nextcloud_admin_user }} \
-e NEXTCLOUD_ADMIN_PASSWORD='{{ nextcloud_admin_password }}' \
-e NEXTCLOUD_TRUSTED_DOMAINS={{ nextcloud_trusted_domains }} \
-e POSTGRES_HOST=postgres.dns.podman \
-e TRUSTED_PROXIES=172.16.1.8/29 \
-e OVERWRITEPROTOCOL=https \
-e OVERWRITECLIURL='https://{{ proxy_fqdn }}' \
-e PHP_UPLOAD_LIMIT=20480M \
-e APACHE_BODY_LIMIT=21474836480 \
-e REDIS_HOST=redis.dns.podman \
-e TZ=America/New_York \
-d docker.io/nextcloud:latest
