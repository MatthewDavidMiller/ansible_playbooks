[Unit]
Description=Podman container-vaultwarden.service
Documentation=man:podman-generate-systemd(1)
Wants=network.target
After=network-online.target

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
TimeoutStopSec=70
ExecStartPre=/usr/bin/podman rm --ignore vaultwarden
ExecStart=/usr/bin/bash /usr/local/bin/vaultwarden.sh
ExecStop=/usr/bin/podman stop --ignore vaultwarden
ExecStopPost=/usr/bin/podman rm --ignore -f vaultwarden
Type=forking

[Install]
WantedBy=multi-user.target default.target
